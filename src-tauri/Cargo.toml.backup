[package]
name = "kael-os"
version = "1.0.0"
edition = "2021"

[dependencies]
tauri = { version = "2.1", features = [] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
tokio = { version = "1", features = ["full"] }
rusqlite = { version = "0.31", features = ["bundled", "chrono"] }
chrono = { version = "0.4", features = ["serde"] }
uuid = { version = "1.11", features = ["v4", "serde"] }
log = "0.4"
env_logger = "0.11"
thiserror = "1.0"
dioxus = "0.5"
dioxus-desktop = "0.5"
arboard = "3"
async-channel = "2"
reqwest = { version = "0.11", features = ["json"] }
base64 = "0.22"
open = "5"
dotenv = "0.15"
gloo-timers = "0.3.0"
urlencoding = "2.1"
once_cell = "1.19"
url = "2.5"
tao = "0.26"

# Cryptography & Security
aes-gcm = "0.10"
pbkdf2 = "0.12"
sha2 = "0.10"
hmac = "0.12"
rand = "0.8"
rcgen = "0.12"
rustls = "0.21"
pem = "1.1"

# Internal crates
kael-terminal = { path = "../crates/terminal" }

[build-dependencies]
tauri-build = { version = "2.1", features = [] }

# Release profile for production builds - optimized for size and speed
[profile.release]
opt-level = 3     # Maximum optimization
lto = true        # Link-time optimization (slow compile, tiny output)
codegen-units = 1 # Single codegen unit for better optimization
strip = true      # Strip symbols for smaller binary
panic = "abort"   # Abort on panic (saves code)

# Ultra-optimized profile - smallest binary possible
[profile.release-minimal]
inherits = "release"
opt-level = "z"      # Optimize for size over speed
lto = "fat"          # Aggressively optimize

# Development profile - faster compilation
[profile.dev]
opt-level = 0 # No optimization
debug = true  # Keep debug symbols
